<%- include ('../partials/header') %>

<div class="container">
        <h1 style="text-align: center;">Create a New Campground</h1>
                <div class="row">                       
                        <div style="width: 35%; margin: 25px auto;">
                                <form action="/campgrounds" method="post">
                                        <div class="form-group">
                                                <label for="">ImgName</label>
                                                <input class="form-control" type="text" name="name" placeholder="Camp..">
                                        </div>
                                        <div class="form-group">
                                                <label for="">URL:</label>
                                                <input class="form-control" type="text" name="image" placeholder="https://image">
                                        </div>
                                        <div class="form-group">
                                                <label for="exampleFormControlTextarea1">TELL SOMETHING ABOUT IT!</label>
                                                <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="10"></textarea>
                                        </div>
                                        <div class="form-group">
                                                <label for="">Price:</label>
                                                <input class="form-control" type="number" name="price" min="100" step="50">
                                        </div>
                                        <div class="form-group">
                                        <button class="btn btn-lg btn-success btn-block">Submit!</button>
                                        </div>
                                </form>
                                <div class="d-flex justify-content-center">
                                        <div>
                                                <a class="btn btn-outline-primary" href="/campgrounds" role="button">Go Back</a>
                                        </div>
                                </div>
                        </div>
                </div>
</div>

        
<%- include ('../partials/footer') %>