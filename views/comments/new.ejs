<%- include ('../partials/header') %>

<div class="container">
        
        <h1 style="text-align: center;">Add New Comment to <%= campground.name %></h1>
                <div class="row">                       
                        <div style="width: 35%; margin: 25px auto;">
                                <form action="/campgrounds/<%= campground._id %>/comments" method="post">
                                        <div class="form-group">
                                                <label for="">TEXT:</label>
                                                <input class="form-control" type="text" name="comment[text]" placeholder="text">
                                        </div>
                                        <div class="form-group">
                                        <button class="btn btn-lg btn-success btn-block">Submit!</button>
                                        </div>
                                </form>
                                <a class="btn btn-outline-primary" href="/campgrounds" role="button">Go Back</a>
                        </div>
                </div>
</div>

        
<%- include ('../partials/footer') %>